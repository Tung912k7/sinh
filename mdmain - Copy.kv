<Second1Screen>:
    name: 'second1'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 30
        spacing: 80

        MDLabel:
            id: second1_label
            text: "- Là quá trình lục lại hấp thụ và sử dụng năng lượng ánh sáng để chuyển hoá CO2 và H2O thành C6H12O6 (Chất hữu cơ), đồng thời giải phóng O2 (NLAS --> NLHH). \n6CO2 + 12H2O --NLAS|Lục lạp--> C6H12O6 + 6H2O"
            font_size: 20
            halign: "left"
            # Text Properties
            text_color: "white"
            size_hint: 1, 1
        MDRectangleFlatButton:
            text: "Hệ sắc tố quang hợp"
            text_color: "white"
